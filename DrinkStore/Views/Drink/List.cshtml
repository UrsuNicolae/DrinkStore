@model DrinkListViewModel

@{
    ViewBag.Title = "DrinkStore";
}

<div>
    <h2>All available drinks</h2>
</div>
<div>
    <h2>@Model.CurrentCategory</h2>
</div>

<div class="row marginTop">
    @{
        foreach (Drink drink in Model.Drinks)
        {
            @Html.Partial("DrinkSummary", drink)
        }
    }
</div>