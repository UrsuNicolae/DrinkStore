@model Drink

    <div class="card m-3"style="min-width: 18rem; max-width:30.5%;">
        <img class="card-img-top" style="height:200px; max-width:100%" src="@Model.ImageThumbnailUrl"  asp-append-version="true" />
        <div class="figure-caption">
            <div>
                <h3 style="float:left">@Model.Name</h3>
                <h3 style="float:right">@Model.Price.ToString("c")</h3>
                <div style="clear:both"></div>
            </div>
            <p>@Model.ShortDescription</p">
        </div>
        <div class="addToCart text-right">
            <a class="btn btn-success" id="cartButton"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-drinkId="@Model.DrinkId">Add to cart
            </a>
        </div>
    </div>