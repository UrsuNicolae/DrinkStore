@model DrinkListViewModel

@{
    ViewBag.Title = "DrinkStore";
}

<div>
    <h2>All available drinks</h2>
</div>
<div>
    <h2>@Model.CurrentCategory</h2>
</div>

<div class="card-deck">
    @{
        foreach (var drink in Model.Drinks)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <img class="card-img-top img" src="@drink.ImageThumbnailUrl" asp-append-version="true" />
                <div class="figure-caption">
                    <div>
                        <h3 style="float:left">@drink.Name</h3>
                        <h3 style="float:right">@drink.Price.ToString("c")</h3>
                        <div style="clear:both"></div>
                    </div>
                    <p>@drink.ShortDescription</p">
                </div>
            </div>
        }
    }
</div>